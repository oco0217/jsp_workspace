<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MemberMapper">

<insert id="insert">
insert into member (id,pwd,email,age,phone) values (#{id}, #{pwd}, #{email}, #{age}, #{phone})
</insert>

<select id="loginInfo" resultType="domain.MemberVO" >
select * from member where id = #{id}
</select>

<select id="list" resultType="domain.MemberVO">
select * from member
</select>

<update id="lastLogin">
update member set lastlogin = now() where id = #{id}
</update>

<update id="update">
update member set pwd = #{pwd}, email = #{email}, age = #{age}, phone = #{phone} where id = #{id}
</update>

<delete id="delete">
delete from member where id = #{id}
</delete>

</mapper>